<div class="breaker-panel">
    <BreakerPanelColumn Breakers="Instance.Breakers.Where((e, i) => i % 2 != 0)" ShowLabels="ShowLabels" OnBreakerClicked="OnBreakerClicked" />
    <BreakerPanelColumn Breakers="Instance.Breakers.Where((e, i) => i % 2 == 0)" ShowLabels="ShowLabels" OnBreakerClicked="OnBreakerClicked" />
</div>
@if (!ShowLabels)
{
    <div class="row my-3">
        <button type="button" class="btn btn-outline-success" @onclick="OnAddRow">Add Row</button>
    </div>
}
@code {
    [CascadingParameter]
    public Models.CircuitBreakerInstance Instance { get; set; }

    [Parameter]
    public bool ShowLabels { get; set; } = false;

    [Parameter]
    public EventCallback OnAddRow { get; set; }

    [Parameter]
    public EventCallback<Models.CircuitBreakerInstance.Breaker> OnBreakerClicked { get; set; }
}
