<div class="breaker-panel">
    <BreakerPanelColumn Breakers="Instance.Breakers.Where((e, i) => i % 2 != 0)" ShowLabels="ShowLabels" />
    <BreakerPanelColumn Breakers="Instance.Breakers.Where((e, i) => i % 2 == 0)" ShowLabels="ShowLabels" />
</div>
@code {
    [CascadingParameter]
    public Models.CircuitBreakerInstance Instance { get; set; }

    [Parameter]
    public bool ShowLabels { get; set; } = false;
}
